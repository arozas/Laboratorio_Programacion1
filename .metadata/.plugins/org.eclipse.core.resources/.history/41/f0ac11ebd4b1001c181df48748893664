#include "Operaciones.h"

void sumar (float numero1, float numero2, float* resultadoOperación)
{
	float resultado;
	resultado=numero1+numero2;
	*resultadoOperación=resultado;
}
float restar (float numero1, float numero2)
{
	float resultado;
	resultado=numero1-numero2;
	return resultado;
}
float multiplicar (float numero1, float numero2)
{
	float resultado;
	resultado=numero1*numero2;
	return resultado;
}
int dividir (float numero1, float numero2, float* resultadoOperacion)
{
	float resultado;
	int retornoError;

	if(numero2!=0)
	{
		resultado = numero1/numero2;
		*resultadoOperación = resultado;
		retornoError = 0;
	}
	else
	{
		retornoError = 1;
	}

	return retornoError;
}

