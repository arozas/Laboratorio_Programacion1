 Objetive	 : Tomar numeros ingresados por el usuario
 	 	 	   y realizar operaciones matématicas simples.
 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>
#include <stdio_ext.h>
#include "Operaciones.h"
#include "Entrada.h"

#define TRUE  1
#define FALSE 0

int main(void)
{
	float opcion;
	float respuesta;
	float numeroIngresadoUno;
	float numeroIngresadoDos;
	float resultado;
	int validacionDivision;

	respuesta=TRUE;

	do
	{
		menuUno("CALCULADORA EN C", "OPERACIONES BÁSICAS", "OTRAS OPERACIONES", &opcion);
		switch((int)opcion)
		{
		case 1:
			menuTres("OPERACIONES BÁSICAS", "SUMAR", "RESTAR", "MULTICPLICAR", "DIVIDIR", &opcion);
			switch((int)opcion)
			{
			case 1:
				do
				{
					ingresoNumero("INGRESE UN NÚMERO", &numeroIngresadoUno);
					ingresoNumero("INGRESE OTRO NÚMERO", &numeroIngresadoDos);
					sumar(numeroIngresadoUno, numeroIngresadoDos, &resultado);
					printf("\n RESULTADO: %2.f", resultado);
					menuUno("¿DESEA CONTINUAR SUMANDO?", "SI", "NO", &respuesta);
				}while(respuesta==TRUE);
				break;
			case 2:
				do
				{
					ingresoNumero("INGRESE UN NÚMERO", &numeroIngresadoUno);
					ingresoNumero("INGRESE OTRO NÚMERO", &numeroIngresadoDos);
					restar(numeroIngresadoUno, numeroIngresadoDos, &resultado);
					printf("\n RESULTADO: %2.f", resultado);
					menuUno("¿DESEA CONTINUAR RESTANDO?", "SI", "NO", &respuesta);
				}while(respuesta==TRUE);
				break;
			case 3:
				do
				{
					ingresoNumero("INGRESE UN NÚMERO", &numeroIngresadoUno);
					ingresoNumero("INGRESE OTRO NÚMERO", &numeroIngresadoDos);
					multiplicar(numeroIngresadoUno, numeroIngresadoDos, &resultado);
					printf("\n RESULTADO: %2.f", resultado);
					menuUno("¿DESEA CONTINUAR MULTIPLICANDO?", "SI", "NO", &respuesta);
				}while(respuesta==TRUE);
				break;
			default:
				do
				{
					ingresoNumero("INGRESE UN NÚMERO", &numeroIngresadoUno);
					ingresoNumero("INGRESE OTRO NÚMERO", &numeroIngresadoDos);
					validacionDivision=division(numeroIngresadoUno, numeroIngresadoDos, &resultado);
					if (validacionDivision==TRUE)
					{
						printf("\n RESULTADO: %2.f", resultado);
					}
					else
					{
						printf("NO SE PUEDE DIVIDIR POR CERO \n");
					}
					menuUno("¿DESEA CONTINUAR DIVIDIENDO?", "SI", "NO", &respuesta);
				}while(respuesta==TRUE);
				break;
			}
			break;
			default:
				menuUno("OTRAS OPERACIONES", "RESTO", "PRODUCTO", &opcion);
		}
		menuUno("¿DESEA CONTINUAR OPERANDO?", "SI", "NO", &respuesta);
	}while(respuesta==TRUE);


	printf("\n\t\t\t\nFINALIZO EL PROGRAMA");
	return 0;
}



