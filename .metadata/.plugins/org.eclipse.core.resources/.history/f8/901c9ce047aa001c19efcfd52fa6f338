#include <stdio.h>
#include <stdlib.h>

int main(void)
{

	int numeroIngresado;
	int acumuladorNumeros;
	int contadorVueltas;
	int confirmarVueltas;
	int promedio;

	contadorVueltas=0;
	confirmarVueltas=0;
	acumuladorNumeros=0;

	while(confirmarVueltas=1)
	{
		printf("\n Ingrese el número \n");
		scanf("%d", &numeroIngresado);
		acumuladorNumeros=acumuladorNumeros+numeroIngresado;
		contadorVueltas=contadorVueltas+1;
		printf("\n ¿Desea Continuar? \n");
		scanf("%c", &confirmarVueltas);
	}

	promedio=acumuladorNumeros/contadorVueltas;

	printf("\n El promedio ES \n");
	printf("%d", promedio);

	return EXIT_SUCCESS;
}
