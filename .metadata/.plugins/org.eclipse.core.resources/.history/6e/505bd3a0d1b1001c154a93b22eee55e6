#include "Operaciones.h"

float sumar (float numero1, float numero2)
{
	float resultado;
	resultado=numero1+numero2;
	return resultado;
}
float restar (float numero1, float numero2)
{
	float resultado;
	resultado=numero1-numero2;
	return resultado;
}
float multiplicar (float numero1, float numero2)
{
	float resultado;
	resultado=numero1*numero2;
	return resultado;
}
int dividir (float numero1, float numero2, float* resultadoOperación)
{
	float resultado;
	float retornoError;

	if(numero2!=0)
	{
		resultado=(float)numero1/numero2;
		retornoError=0;
	}
	else
	{
		retornoError=1;
	}
	return retornoError;
}

